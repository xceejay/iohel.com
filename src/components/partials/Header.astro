---
import Container from "@/components/Container.astro";

const pathname = Astro.url.pathname;

const isHomePage = pathname === "/";
const isWritingPage = pathname.startsWith("/writing");
const isProjectsPage = pathname.startsWith("/projects");
const isPhotographyPage = pathname.startsWith("/photography");
const isNextPage = pathname.startsWith("/next");

---
<Container as="header" class="w-full flex justify-center items-center">
  <div class="fixed top-0 w-full z-50">
    <!-- Background with tiny margin on sides -->
    <div class="bg-background w-full py-2 px-2 md:px-4">
      <nav class="w-full max-w-[600px] mx-auto">
        <ul class="flex items-center justify-between flex-wrap">
          <li>
            <a
              href="/"
              class:list={[
                "font-medium transition-colors block px-2 py-1 text-xl",
                "hover:text-headings",
                isHomePage && "text-headings bg-muted-foreground/40",
              ]}
            >
              Joel
            </a>
          </li>

          <li>
            <a
              href="/projects"
              class:list={[
                "font-medium transition-colors block px-2 py-1 text-xl",
                "hover:text-headings",
                isProjectsPage && "text-headings bg-muted-foreground/40",
              ]}
            >
              Work
            </a>
          </li>

          <li>
            <a
              href="/photography"
              class:list={[
                "font-medium transition-colors block px-2 py-1 text-xl",
                "hover:text-headings",
                isPhotographyPage && "text-headings bg-muted-foreground/40",
              ]}
            >
              Photos
            </a>
          </li>

          <li>
            <a
              href="/writing"
              class:list={[
                "font-medium transition-colors block px-2 py-1 text-xl",
                "hover:text-headings",
                isWritingPage && "text-headings bg-muted-foreground/40",
              ]}
            >
              Notes
            </a>
          </li>

          <li>
            <a
              href="/next"
              class:list={[
                "font-medium transition-colors block px-2 py-1 text-xl",
                "hover:text-headings",
                isNextPage && "text-headings bg-muted-foreground/40",
              ]}
            >
              Archive
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</Container>
