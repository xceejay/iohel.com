---
import { getCollection, getEntry } from 'astro:content';
import Author from '@/components/ui/Author.astro';
import Container from '@/components/Container.astro';
import BaseLayout from '@/layouts/BaseLayout.astro';
import { DEFAULT_CONFIGURATION } from '@/lib/constants';
import ProjectPostPreview from '@/components/ui/ProjectPostPreview.astro';

const entry = await getEntry('pages', 'projects');
const posts = await getCollection('project-posts');
---

<BaseLayout seo={entry.data.seo}>
  <Container as='section' class='py-6'>
    <!-- <Author {...DEFAULT_CONFIGURATION.author} /> -->
  </Container>
  <Container as='section' class='py-6'>
    <div class="flex flex-col gap-6">
      <span class="text-headings text-4xl">Cool Projects</span>
      <ul class="flex flex-col gap-3 text-xl">
        {posts.map((post) => <ProjectPostPreview entry={post} />)}
      </ul>
    </div>
  </Container>
</BaseLayout>
